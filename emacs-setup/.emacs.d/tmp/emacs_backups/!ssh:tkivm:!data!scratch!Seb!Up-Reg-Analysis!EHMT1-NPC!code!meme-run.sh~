#!/bin/sh

# Enter the directory with the fasta results
cd data/fasta


# Unlock the file to wortk with it 
datalad unlock Upregulated_500.fa.out

# Run the memesuite
../../singularity/meme.simg meme Upregulated_500.fa.out \
                      -dna \
                      -oc up \
                      -nostatus \
                      -time 18000 \
                      -mod zoops \
                      -nmotifs 100 \
                      -minw 6 \
                      -maxw 20 \
                      -objfun classic \
                      -revcomp \
                      -markov_order 0


