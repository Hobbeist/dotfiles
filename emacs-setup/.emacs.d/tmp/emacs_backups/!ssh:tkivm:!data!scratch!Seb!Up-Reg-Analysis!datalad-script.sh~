# This can be deleted after I run it. jsut to have something to copy paste to and from


datalad run -m 'extract the genomic locations for the DE genes' \
        --input 'data/gtf/gencode.v29.annotation.gtf' \
        --input 'data/gtf/results_based_on_gene_name.txt' \
        --output 'data/gtf/results_based_on_gene_name.txt' \
        --output 'data/gtf/extracted_locations.txt' \
        'bash code/extract-genes-and-locations.sh'


datalad containers-run -m 'Create up- and downregulated befiles from DE genes and locations' \
        --container-name rscript \
        --input 'data/gtf/extracted_locations.txt' \
        --input 'data/DE-list/gene_id_NPC.csv' \
        --output 'data/bedfiles/Upregulated_500bp.bed' \
        --output 'data/bedfiles/Downregulated_500bp.bed' \
        'Rscript code/create-bedfiles.R'





